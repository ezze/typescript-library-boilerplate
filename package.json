{
  "name": "tlb",
  "version": "0.1.0",
  "description": "TypeScript library boilerplate",
  "keywords": [
    "typescript",
    "library",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezze/typescript-library-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/ezze/typescript-library-boilerplate"
  },
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --flag unstable_ts_config",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "prettier": "prettier-config-ezze",
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@stylistic/eslint-plugin-ts": "^2.11.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "eslint-config-ezze-prettier": "1.0.0-alpha.1",
    "eslint-config-ezze-ts": "1.0.0-alpha.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "prettier": "^3.4.2",
    "prettier-config-ezze": "^1.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  }
}
